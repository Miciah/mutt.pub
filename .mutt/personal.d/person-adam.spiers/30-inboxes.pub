set spoolfile="=in/MAIN"

mailboxes !

#macro index,pager i  "<change-folder>=in/\t\tj"  "show main inboxes"

macro index i  "<change-folder><kill-line>\t\tjj"  "show main inboxes"
# For some reason, "<change-folder>?" ensures that the user will return
# to the pager on quit, not the index.
macro pager i  "<change-folder>?<toggle-mailboxes>jj"  "show main inboxes"

# last matching rule wins

macro editor <f2> "<kill-line>=in/reading"
